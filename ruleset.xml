<?xml version="1.0"?>
<ruleset name="theAverageDevCodingStandards">
    <description>theAverageDev coding standards</description>

    <rule ref="PSR2"/>

    <!--require comments-->
    <rule ref="Squiz">
        <exclude name="Squiz.Commenting.FileComment"/>
        <exclude name="Squiz.Files.FileExtension"/>
    </rule>

    <!--4 spaces per tab-->
    <arg name="tab-width" value="4"/>

    <!--allow tab indents-->
    <rule ref="PSR2">
        <exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
    </rule>

    <!--make sure spaces are not used to indent-->
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <!--braces should be on same line-->
    <rule ref="PSR2">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
    </rule>
    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>

    <file>src</file>

    <arg name="colors"></arg>

    <rule ref="src/CodingStandards/ruleset.xml"/>
</ruleset>
